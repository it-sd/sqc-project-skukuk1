<%- include('../shared/header.ejs') %>
    <main>
      <h2>The Butterfly Interest List Homepage</h2>
        <div id="anime_list">
          <table>
            <tr>
              <th>Anime</th>
              <th>Studio</th>
              <th>Genre</th>
              <th>Description</th>
              <th>Personal Rating</th>
            </tr>
            <tr>
              <%_ for (const anime of animes) { _%>
                <td><%= anime.anime_name %></td>
                <td><%= anime.studio %></td>
                <td><%= anime.genre %></td>
                <td><%= anime.description %></td>
                <td><%= anime.personal_rating %></td>
              <%_ } _%>
            </tr>
          </table>
        </div>
        <div id="manga_list">
          <table>
            <tr>
              <th>Manga</th>
              <th>Author</th>
              <th>Genre</th>
              <th>Description</th>
              <th>Personal Rating</th>
            </tr>
            <tr>
              <%_ for (const manga of mangas) { _%>
                <td><%= manga.manga_name %></td>
                <td><%= manga.author %></td>
                <td><%= manga.genre %></td>
                <td><%= manga.description %></td>
                <td><%= manga.personal_rating %></td>
              <%_ } _%>
            </tr>
          </table>
        </div>
    </main>
    </div>
  </body>
</html>
